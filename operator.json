{
  "name": "Histogram",
  "description": "Creates 1D or 2D histograms from measurement data.",
  "tags": [
    "visualization",
    "statistics",
    "histogram"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/histogram_operator"
  ],
  "properties": [
    {
      "kind": "DoubleProperty",
      "name": "n_bins",
      "defaultValue": 30,
      "description": "Number of bins"
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Row",
            "type": "",
            "description": "Optional row factor for grouping histograms.",
            "ontologyMapping": "variable",
            "crosstabMapping": "row",
            "cardinality": "0..n",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Column",
            "type": "",
            "description": "Optional column factor for grouping histograms.",
            "ontologyMapping": "observation",
            "crosstabMapping": "column",
            "cardinality": "0..n",
            "factors": []
          }
        ],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Y Axis",
                "type": "numeric",
                "description": "Measurement values.",
                "ontologyMapping": "measurement",
                "crosstabMapping": "y",
                "cardinality": "1",
                "factors": []
              },
              {
                "kind": "MetaFactor",
                "name": "X Axis",
                "type": "numeric",
                "description": "Second measurement for 2D histogram.",
                "ontologyMapping": "measurement",
                "crosstabMapping": "x",
                "cardinality": "0..1",
                "factors": []
              },
              {
                "kind": "MetaFactor",
                "name": "Label",
                "type": "",
                "description": "Optional label factor for grouped histograms (at most 1).",
                "ontologyMapping": "pairing",
                "crosstabMapping": "label",
                "cardinality": "0..1",
                "factors": []
              }
            ]
          }
        ]
      }
    ],
    "outputSpecsV2": [
      {
        "kind": "ConditionalJoinSpec",
        "description": "Output varies based on X-axis and Label presence",
        "alternatives": [
          {
            "kind": "OutputAlternative",
            "condition": "No X-axis, no labels (1D histogram)",
            "joinSpec": {
              "kind": "OperatorJoinSpec",
              "joinOperators": [
                {
                  "kind": "JoinOperator",
                  "joinType": "left",
                  "leftPair": {
                    "kind": "ColumnPair",
                    "lColumns": [
                      "Row",
                      "Column"
                    ],
                    "rColumns": [
                      "Row",
                      "Column"
                    ]
                  },
                  "rightRelation": {
                    "kind": "TableRelation",
                    "attributes": [
                      {
                        "kind": "Attribute",
                        "name": "counts",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "density",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "mids",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "bins",
                        "type": "string"
                      }
                    ]
                  }
                }
              ]
            }
          },
          {
            "kind": "OutputAlternative",
            "condition": "With X-axis, no labels (2D histogram)",
            "joinSpec": {
              "kind": "OperatorJoinSpec",
              "joinOperators": [
                {
                  "kind": "JoinOperator",
                  "joinType": "left",
                  "leftPair": {
                    "kind": "ColumnPair",
                    "lColumns": [
                      "Row",
                      "Column"
                    ],
                    "rColumns": [
                      "Row",
                      "Column"
                    ]
                  },
                  "rightRelation": {
                    "kind": "TableRelation",
                    "attributes": [
                      {
                        "kind": "Attribute",
                        "name": "x_bin_id",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "y_bin_id",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "count",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "x_bin",
                        "type": "string"
                      },
                      {
                        "kind": "Attribute",
                        "name": "y_bin",
                        "type": "string"
                      },
                      {
                        "kind": "Attribute",
                        "name": "density",
                        "type": "double"
                      }
                    ]
                  }
                }
              ]
            }
          }
        ],
        "refactorSuggestion": "Split into histogram_1d and histogram_2d operators"
      }
    ]
  }
}