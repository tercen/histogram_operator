{
  "name": "Histogram",
  "description": "Creates 1D or 2D histograms from measurement data.",
  "tags": [
    "visualization",
    "statistics",
    "histogram"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/histogram_operator"
  ],
  "properties": [
    {
      "kind": "DoubleProperty",
      "name": "n_bins",
      "defaultValue": 30,
      "description": "Number of bins"
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Y Axis",
                "type": "numeric",
                "description": "Measurement values.",
                "ontologyMapping": "measurement",
                "crosstabMapping": "y",
                "cardinality": "1",
                "factors": []
              },
              {
                "kind": "MetaFactor",
                "name": "X Axis",
                "type": "numeric",
                "description": "Second measurement for 2D histogram.",
                "ontologyMapping": "measurement",
                "crosstabMapping": "x",
                "cardinality": "0..1",
                "factors": []
              }
            ]
          }
        ]
      }
    ]
  }
}